{{#partial "content"}}
    <h4 class="text-center">These are all the animals found in "{{location}}"</h4>
    <table class="table text-center">
        <thead class="thead-dark">
        <tr>
            <th scope="col">The Ranger</th>
            <th scope="col">Animals</th>
            <th scope="col">Time</th>
        </tr>
        </thead>
        <tbody>
        {{#each sightings}}
            <tr>
                <td><a href="/rangers/{{rangerid}}/details">{{rangerName}}</a></td>
                <td>{{animalName}}</td>
                <td>{{readableTimestamp}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>

{{/partial}}

{{> layout.hbs}}