{{#partial "content"}}
    {{#if rangers}}
        <h2 class="text-center">Rangers</h2>
        <ul class="list-group">
            {{#each rangers}}
                <li class="list-group-item"><a href="/rangers/{{id}}/details">{{name}}</a></li>
            {{/each}}
        </ul>
    {{else}}
        <h5 class="text-center">No rangers have spotted an animal so far, be the first by recording a sighting.</h5>
    {{/if}}

{{/partial}}

{{> layout.hbs}}
