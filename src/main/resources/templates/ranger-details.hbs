{{#partial "content"}}
    <div class="row">
        <div class="col-md-6">
            <h4>Ranger {{ranger.name}}</h4>
        </div>
    </div>

    <table class="table text-center">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Animal</th>
            <th scope="col">Location</th>
            <th scope="col">Time</th>
        </tr>
        </thead>
        <tbody>
        {{#each sightings}}
            <tr>
                <td>{{animalName}}</td>
                <td>{{location}}</td>
                <td>{{readableTimestamp}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>

{{/partial}}

{{> layout.hbs}}